<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Offers.MyJoinedOfferActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/userName1"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:text="gracz1"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/level"
        app:layout_constraintEnd_toStartOf="@+id/userName2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userName2"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:text="gracz2"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/userName1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView2"
        android:layout_width="306dp"
        android:layout_height="180dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <TextView
        android:id="@+id/level"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="Poziom"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact1" />

    <TextView
        android:id="@+id/price"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="Cena"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level" />

    <TextView
        android:id="@+id/address"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:text="Adres"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <TextView
        android:id="@+id/date"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:text="Data"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/mapView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <TextView
        android:id="@+id/contact1"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="45dp"
        android:text="Kontakt1"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/level"
        app:layout_constraintEnd_toStartOf="@+id/contact2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName1" />

    <TextView
        android:id="@+id/contact2"
        android:layout_width="130dp"
        android:layout_height="17dp"
        android:layout_marginEnd="46dp"
        android:text="Kontakt2"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/contact1"
        app:layout_constraintTop_toBottomOf="@+id/userName2" />

</android.support.constraint.ConstraintLayout>